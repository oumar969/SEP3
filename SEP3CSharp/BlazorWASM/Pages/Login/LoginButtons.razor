@using Microsoft.AspNetCore.Components
@using HttpClients.ClientInterfaces

@namespace Login
@inject NavigationManager navMgr
 @* /@inject IAuthService authService  *@

<AuthorizeView>
    <Authorized>
        <img class="icon" src="image/Logout.png" @onclick="Logout"/>
    </Authorized>
    <NotAuthorized>
        <img class="icon" src="image/Login.png" @onclick="Login"/>
    </NotAuthorized>
</AuthorizeView>

@code {

    private void Login()
    {
        navMgr.NavigateTo("/Login");
    }

    private async Task Logout()
    {
        // await authService.LogoutAsync();
        
        navMgr.NavigateTo("/");
    }

}